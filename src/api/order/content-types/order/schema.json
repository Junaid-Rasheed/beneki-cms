{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "orderNumber": {
      "type": "uid"
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "orders"
    },
    "total": {
      "type": "decimal"
    },
    "paymentMethod": {
      "type": "enumeration",
      "enum": [
        "credit_card",
        "bank_transfer",
        "paypal"
      ]
    },
    "orderItems": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::order-item.order-item"
    },
    "orderStatus": {
      "type": "enumeration",
      "enum": [
        "pending",
        "confirmed",
        "processing",
        "Partially Shipped",
        "shipped",
        "delivered",
        "cancelled"
      ]
    },
    "notes": {
      "type": "string"
    },
    "subTotal": {
      "type": "decimal"
    },
    "shippingCost": {
      "type": "decimal"
    },
    "vat": {
      "type": "decimal"
    },
    "paymentStatus": {
      "type": "enumeration",
      "enum": [
        "pending",
        "paid",
        "failed"
      ]
    },
    "deliveryDate": {
      "type": "datetime"
    },
    "billingAddress": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::order-address.order-address"
    },
    "shippingAddress": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::order-address.order-address"
    },
    "discountCode": {
      "type": "string"
    },
    "discountAmount": {
      "type": "decimal"
    },
    "refundStatus": {
      "type": "enumeration",
      "enum": [
        "requested",
        "approved",
        "denied",
        "processed"
      ]
    },
    "numberOfBoxes": {
      "type": "decimal"
    }
  }
}
